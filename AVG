package gyyzp.avg;

import java.awt.Graphics;
import java.awt.event.MouseEvent;



public class AVG implements IAVG {

	private IControl control;

	public AVG() {
		
	}

	public synchronized void draw(final Graphics g) {
		control = control.invoke();
		if(validControl())
		control.draw(g);
	}

	public IControl getControl() {
		return control;
	}

	public synchronized void setControl(final IControl control) {
		this.control = control;
	}
	
	public boolean validControl(){
		return (this.control != null);
	}



	public void mouseClicked(MouseEvent e) {
		if(validControl())
		this.control.mouseClicked(e);
	}

	public void mouseEntered(MouseEvent e) {
		if(validControl())
		this.control.mouseEntered(e);
	}

	public void mouseExited(MouseEvent e) {
		if(validControl())
		this.control.mouseExited(e);
	}

	public void mousePressed(MouseEvent e) {
		if(validControl())
		this.control.mousePressed(e);
	}

	public void mouseReleased(MouseEvent e) {
		if(validControl())
		this.control.mouseReleased(e);
	}

	public void mouseDragged(MouseEvent e) {
		if(validControl())
		this.control.mouseDragged(e);
	}

	public void mouseMoved(MouseEvent e) {
		if(validControl())
		this.control.mouseMoved(e);
	}

}
